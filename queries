   [
     { $match : { "entities.user_mentions.id":45886921,"in_reply_to_status_id":null  } },
     {
       $group:
         {
           _id: { day: { $dayOfYear: "$created_at"}, year: { $year: "$created_at" } },
          
           count: { $sum: 1 }
         }
     }
   ]
)


