
db.tweets.aggregate(
   [
     { $match : { "entities.user_mentions.id":45886921 } },
     {
       $group:
         {
           _id: { day: { $dayOfYear: "$created_at"}, year: { $year: "$created_at" } },
          
           count: { $sum: 1 }
         }
     }
   ]
)




